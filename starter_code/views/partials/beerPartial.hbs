<div class="card col-md-4 d-flex flex-column align-items-center justify-content-around">
  <figure class="img-size">
    <img class="card-img-top" src="{{this.image_url}}" alt="Card image cap">
  </figure>
  <div>
    <h4 class="card-title">{{this.name}}</h4>
    <h5>{{this.tagline}}</h5>
    <p class="card-text">{{this.description}}</p>
  </div>
</div>